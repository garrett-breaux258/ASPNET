@model Product

<h2>Create a New Product</h2>

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
            {
                <input asp-for="ProductID" type="hidden" value=""/>
                <label asp-for="Name" class="control-label">Name</label>
                <input type="text" name="Name" class="form-control" value=""/>
                <label asp-for="Price" class="control-label">Price</label>
                <input type="number" step=".01" name="Price" class="form-control"/>
                <div class="form-group">
                    <label for="">Select a Category</label>
                    <select class="form-control" name="CategroyID" value="">
                        @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
                }
                        </select>
                   
                         </div>
                         <input type ="submit" value="Creat Product" class="btn btn-primary"/>

            }